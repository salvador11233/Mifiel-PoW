<nav class="navbar navbar-dark bg-dark">
    <h1 style="color: #FFF">Formulario para request de API - Mifiel</h1> 
</nav>

<div class="card">
    <div class="card-body">
        <%= form_with :url => { :action => :create }, method: 'post' do |form| %>
            <div class="form-group">
                <%= form.label :nombre, 'Nombre' %>
                <%= form.text_field :nombre, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= form.label :email, 'Email' %>
                <%= form.email_field :email, class: 'form-control' %>
            </div>
            <%= form.submit 'Enviar', class: 'btn btn-primary mt-2' %>
        <% end %>
    </div>
</div>

